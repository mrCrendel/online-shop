@import 'libs/uikit.css'
@import 'var/var.styl'
@import 'include/header.styl'




.index-banner
  height: 600px
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  .block-pos > div > div
    margin: 10px 0
  .block-pos
    background-color: yl
    padding: 50px
    h4
      margin: 0
      font-weight: 700
    a
      display: inline-block
      line-height: 44px
      padding: 0 20px
      background-color: gn
      color wt
      border-radius 50px
      text-transform: none
      text-decoration: none
      font-weight: bold
      box-shadow: 0px 4px 4px rgba(150, 195, 25, 0.25)
      font-size: 18px
      &:hover
        background-color: gnh
.project-preview
  .item
    padding: 40px 0
    &:hover
      h4
        &:before, &:after
          width: 100%
    .uk-position-cover
      z-index: 3
    &:before
      background: rgba(0, 0, 0, 0.75)
      position: absolute
      top: 0
      bottom: 0
      right: 0
      left: 0
      z-index: 1
      content ''
      display: flex
    h4
      padding: 10px 0
      margin: 0 20px
      z-index: 2
      position: relative
      font-size: 18px
      color: wt
      font-weight: 500

      &:before
        position: absolute
        left: 0
        top: 0
        background-color: wt
        content ''
        display: flex
        height: 1px
        width: 0
        transition tr
      &:after
        position: absolute
        right: 0
        bottom: 0
        background-color: wt
        content ''
        display: flex
        height: 1px
        width: 0
        transition tr
.top-project
  h2
    font-weight bold
    font-size 48px
    text-align center
    color wt
    background-color: gn
    padding: 50px 0
    margin: 0
  .item
    padding: 40px 20px
    .wrapper
      position: relative
      z-index: 2
    &:before
      background-color: rgba(0, 0, 0, 0.5)
      position: absolute
      top: 0
      bottom: 0
      right: 0
      left: 0
      display: flex
      content ''
      z-index: 1
    h3
      font-weight bold
      line-height normal
      font-size 18px
      text-align center
      color wt
      margin-top: 0
      margin-bottom: 50px
    p
      text-align center
      font-weight 500
      line-height normal
      font-size 18px
      color wt
      margin: 0 0 10px 0
    .btn
      font-weight 500
      line-height normal
      font-size 18px
      text-align center
      color wt
      border-radius 30px
      padding: 10px 20px
      border: 2px solid gn
      text-decoration: none
      margin: 10px
      display: inline-block
      transition tr
    .like
      background-color: gn
      &:hover
        background-color: gnh
    .more
      &:hover
        background-color: gn
  .show-more
    font-weight 500
    line-height normal
    font-size 18px
    text-align center
    color gn
    border-radius 50px
    padding: 20px 20px
    border: 2px solid gn
    text-decoration: none
    margin: 50px 0
    display: inline-block
    transition tr
    &:hover
      background-color: gnh
      color wt






